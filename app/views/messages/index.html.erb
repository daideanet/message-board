<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>

  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
        <%= message.body %>
        (<%= link_to "edit" , edit_message_path(message) %>
         <%= link_to "destroy" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' } %>
        )
      <br>
    <% end %>

<% #部分テンプレートを読み込んでいる %>
<%= render 'form' %>

  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message) do |f| %>
  <label for="Textarea">名前:</label>
  <%= f.text_field :name, class: "form-control",placeholder:"テスト太郎" %><br>

  <label for="Textarea">内容:</label>
  <%= f.text_area :body, class: "form-control", placeholder:"140文字以内で投稿してください。" , rows: "4" %><br>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
